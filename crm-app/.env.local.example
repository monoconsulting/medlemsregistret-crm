# ==============================================
# .env.local - För LOKAL utveckling (utan Docker)
# ==============================================
# Kopiera denna fil till .env.local om du kör utan Docker

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# För lokal MySQL installation
DATABASE_URL="mysql://root:password@localhost:3306/crm_db"

# ==============================================
# REDIS CONFIGURATION
# ==============================================
# För lokal Redis installation
REDIS_URL="redis://:your_redis_password@localhost:6379"

# ==============================================
# NEXTAUTH CONFIGURATION
# ==============================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your_random_secret_here_use_openssl_rand_base64_32"

# ==============================================
# GOOGLE OAUTH (Valfritt)
# ==============================================
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""

# ==============================================
# AI PROVIDERS (Valfritt)
# ==============================================
# OPENAI_API_KEY=""
# OPENAI_MODEL="gpt-4-turbo-preview"

# ANTHROPIC_API_KEY=""
# ANTHROPIC_MODEL="claude-3-opus-20240229"

# För lokal Ollama
# OLLAMA_HOST="http://localhost:11434"
# OLLAMA_MODEL="llama2"

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"
TZ="Europe/Stockholm"
NEXT_TELEMETRY_DISABLED="1"
