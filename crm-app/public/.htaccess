<IfModule mod_headers.c>
  # Aggressive caching for hashed static assets produced by Next.js export.
  <FilesMatch "\.(js|css|mjs|json|png|jpg|jpeg|gif|svg|webp|ico|woff|woff2)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # HTML should always revalidate to pick up new deploys.
  <FilesMatch "\.(html)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
  </FilesMatch>
</IfModule>
