{
  "name": "crm-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsup src/server.ts --format cjs --sourcemap --no-dts --no-minify --out-dir dist --clean --env.BACKEND_MONOREPO=1",
    "start": "node dist/server.js",
    "prisma:verify": "tsx src/tools/prisma-verify.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "@trpc/server": "^11.0.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "copy-anything": "^3.0.3",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "superjson": "^2.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/helmet": "^4.0.0",
    "@types/node": "^20.12.7",
    "tsup": "^8.2.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}
